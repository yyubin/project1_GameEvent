<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/board_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_board_list_title"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20p"
            android:text="제 목"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_board_list_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20p"
            android:gravity="center"
            android:text="00"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_board_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20p"
        android:text="박유빈"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_board_list_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20p"
        android:text="07/15 16:59"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_board_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용내용내용내용"
        android:textColor="#000000"
        android:textSize="16sp" />

</LinearLayout>