<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/board_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_board_list_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_board_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="제목제목제목"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_board_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="박유빈" />

    <TextView
        android:id="@+id/tv_board_list_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="07/15 16:59"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_board_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:text="내용내용내용내용" />

</LinearLayout>